						{
							"listen": "test",
							"script": {
								"exec": [
									"try {\r",
									"    const responseData = pm.response.json();\r",
									"\r",
									"    if (responseData.access_token) {\r",
									"        const accessToken = responseData.access_token;\r",
									"\r",
									"        pm.globals.set(\"KARHUB_BEER_USER\", accessToken);\r",
									"\r",
									"        console.log(\"Token de acesso salvo na variável global KARHUB_BEER_USER.\");\r",
									"        console.log(\"Token: \" + accessToken.substring(0, 30) + \"...\");\r",
									"    } else {\r",
									"        console.error(\"O access_token não foi encontrado na resposta.\");\r",
									"    }\r",
									"} catch (e) {\r",
									"    console.error(\"Não foi possível analisar a resposta como JSON.\", e);\r",
